<UserControl
    x:Class="estimate1.Controls.RibbonButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:estimate1.Controls">

    <Grid>
        <Button x:Name="RibbonBtn" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <StackPanel x:Name="LargeLayout" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Spacing="4">
                    <Image x:Name="LargeIcon" Width="32" Height="32" Stretch="Uniform" />
                    <TextBlock x:Name="LargeText" TextWrapping="Wrap" TextAlignment="Center" />
                </StackPanel>

                <StackPanel x:Name="SmallLayout" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" Spacing="6">
                    <Image x:Name="SmallIcon" Width="16" Height="16" Stretch="Uniform" />
                    <TextBlock x:Name="SmallText" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Button>
    </Grid>
</UserControl>
